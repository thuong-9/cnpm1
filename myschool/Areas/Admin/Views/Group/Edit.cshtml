@model myschool.Areas.Admin.Models.Group

@{
    ViewData["Title"] = "Chỉnh sửa nhóm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Chỉnh sửa nhóm</h1>
                </div>
                @* <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                        <li class="breadcrumb-item"><a asp-action="Index">Quản lý nhóm</a></li>
                        <li class="breadcrumb-item active">Chỉnh sửa nhóm</li>
                    </ol>
                </div> *@
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-8">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Thông tin nhóm</h3>
                        </div>
                        <form asp-action="Edit">
                            <div class="card-body">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="GroupId" />

                                <div class="form-group">
                                    <label>Tên nhóm</label>
                                    <input asp-for="GroupName" class="form-control" />
                                    <span asp-validation-for="GroupName" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label>Mô tả</label>
                                    <textarea asp-for="Description" class="form-control"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Lưu</button>
                                <a asp-action="Index" class="btn btn-default">Quay lại</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}