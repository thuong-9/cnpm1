@model IEnumerable<myschool.Areas.Admin.Models.GroupMember>
@using myschool.Areas.Admin.Models

@{
    ViewData["Title"] = "Danh sách thành viên nhóm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Danh sách thành viên nhóm: @ViewBag.Group.GroupName</h2>
    </div>

    <section>
        <div class="row">
            <div class="col-12">
                <div class="card recent-sales overflow-auto">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">Danh sách thành viên</h5>
                        <a asp-area="Admin"
                           asp-controller="Group"
                           asp-action="AddMember"
                           asp-route-id="@ViewBag.GroupId"
                           class="btn btn-primary">
                            <i class="fas fa-user-plus"></i> Thêm thành viên
                        </a>
                    </div>

                    <div class="card-body mt-4">
                        <table class="table table-borderless datatable">
                            <thead>
                                <tr>
                                    <th class="col-4 text-left">Tài khoản</th>
                                    <th class="col-2 text-center">Vai trò</th>
                                    <th class="col-3 text-center">Ngày tham gia</th>
                                    <th class="col-3 text-center">Chức năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="text-left">@item.User?.UserName</td>
                                            <td class="text-center">@item.Role</td>
                                            <td class="text-center">@item.JoinedDate.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td class="text-center">
                                                <a asp-area="Admin"
                                                   asp-controller="Group"
                                                   asp-action="EditMember"
                                                   asp-route-id="@item.GroupMemberId"
                                                   class="btn btn-sm btn-primary"
                                                   title="Sửa">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-area="Admin"
                                                   asp-controller="Group"
                                                   asp-action="DeleteMember"
                                                   asp-route-id="@item.GroupMemberId"
                                                   class="btn btn-sm btn-danger"
                                                   title="Xóa">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center text-muted">
                                            Không có thành viên nào trong nhóm
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
@{
    GroupMember? deleteMember = null;
    if (ViewData["DeleteMember"] is GroupMember m)
    {
        deleteMember = m;
    }
}

@if (deleteMember != null)
{
    <div class="modal fade" id="deleteMemberModal" tabindex="-1" aria-labelledby="deleteMemberModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="deleteMemberModalLabel">Xác nhận xóa thành viên</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Bạn có chắc chắn muốn xóa thành viên này khỏi nhóm?</p>
                    <div class="form-group mb-2">
                        <label>Nhóm:</label>
                        <input type="text" class="form-control" value="@deleteMember.Group?.GroupName" disabled />
                    </div>
                    <div class="form-group mb-2">
                        <label>Thành viên:</label>
                        <input type="text" class="form-control" value="@deleteMember.User?.UserName" disabled />
                    </div>
                    <div class="form-group">
                        <label>Vai trò:</label>
                        <input type="text" class="form-control" value="@deleteMember.Role" disabled />
                    </div>
                </div>
                <div class="modal-footer">
                    <a class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-arrow-left-circle"></i> Go back
                    </a>
                    <form asp-area="Admin" asp-controller="Group" asp-action="DeleteMember" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@deleteMember.GroupMemberId" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <script>
            var modal = new bootstrap.Modal(document.getElementById('deleteMemberModal'));
            modal.show();
        </script>
    }
}
