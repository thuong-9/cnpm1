@model myschool.Areas.Admin.Models.GroupMember

@{
    ViewData["Title"] = "Quản lý thành viên nhóm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    int? selectedGroupId = ViewBag.SelectedGroupId as int?;
    var groups = ViewBag.Groups as IEnumerable<dynamic>;
    var users = ViewBag.Users as IEnumerable<dynamic>;
    var members = ViewBag.Members as IEnumerable<myschool.Areas.Admin.Models.GroupMember>;
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Thay đổi thành viên nhóm</h2>
    </div>
    <section>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">Chọn nhóm để thay đổi thành viên</h5>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-list"></i> Danh sách nhóm
                        </a>
                    </div>
                    <div class="card-body">
                        <form method="get" asp-action="EditMember" class="row g-3 align-items-end">
                            <div class="col-md-6">
                                <label class="form-label">Nhập tên nhóm</label>
                                <input type="text" name="groupName" list="groupNameList2" class="form-control" placeholder="Nhập tên nhóm" value="@ViewBag.SelectedGroupName">
                                <datalist id="groupNameList2">
                                    @if (groups != null)
                                    {
                                        foreach (var g in groups)
                                        {
                                            <option value="@g.GroupName"></option>
                                        }
                                    }
                                </datalist>
                            </div>
                            <div class="col-md-3">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-search"></i> Chọn nhóm
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        @if (selectedGroupId.HasValue)
        {
            <div class="row mt-4">
                <div class="col-12">
                    <div class="card recent-sales overflow-auto">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Thành viên hiện có</h5>
                        </div>
                        <div class="card-body mt-3">
                            <table class="table table-borderless datatable">
                                <thead>
                                    <tr>
                                        <th class="col-5 text-left">Tài khoản</th>
                                        <th class="col-3 text-center">Vai trò</th>
                                        <th class="col-4 text-center">Chức năng</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (members != null && members.Any())
                                    {
                                        foreach (var item in members)
                                        {
                                            <tr>
                                                <td class="text-left">@item.User?.UserName</td>
                                                <td class="text-center">@item.Role</td>
                                                <td class="text-center">
                                                    <a asp-action="EditMember"
                                                       asp-route-id="@item.GroupMemberId"
                                                       class="btn btn-sm btn-primary"
                                                       title="Sửa">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <form asp-action="DeleteMember" method="post" class="d-inline-block" onsubmit="return confirm('Bạn có chắc muốn xóa thành viên này?');">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@item.GroupMemberId" />
                                                        <button type="submit" class="btn btn-sm btn-danger" title="Xóa">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="3" class="text-center text-muted">Nhóm chưa có thành viên</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="row mt-4">
                <div class="col-12">
                    <div class="alert alert-info">
                        Vui lòng chọn một nhóm để xem danh sách thành viên và thêm thành viên mới.
                    </div>
                </div>
            </div>
        }
    </section>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            $('.select2').each(function () {
                var placeholder = $(this).data('placeholder') || '';
                $(this).select2({
                    width: '100%',
                    allowClear: true,
                    placeholder: placeholder
                });
            });
        });
    </script>
}
