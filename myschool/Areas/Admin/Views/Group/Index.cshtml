@model IEnumerable<myschool.Areas.Admin.Models.Group>
@using myschool.Areas.Admin.Models

@{
    ViewData["Title"] = "Danh sách nhóm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Danh sách nhóm</h2>
    </div>

    <section>
        <div class="row">
            <div class="col-12">
                <div class="card recent-sales overflow-auto">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">Danh sách nhóm</h5>
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Tạo nhóm mới
                        </a>
                    </div>
                    <div class="card-body mt-4">
                        <table class="table table-borderless datatable">
                            <thead>
                                <tr>
                                    <th class="text-center col-2">Mã nhóm</th>
                                    <th class="text-left col-6">Tên nhóm</th>
                                    <th class="text-center col-4">Chức năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="text-center">@item.GroupId</td>
                                            <td class="text-left">@item.GroupName</td>
                                            <td class="text-center">
                                                <a asp-action="Members"
                                                   asp-route-id="@item.GroupId"
                                                   class="btn btn-info btn-sm"
                                                   title="Thành viên">
                                                    <i class="bi bi-person"></i>
                                                </a>
                                                <a asp-action="Edit"
                                                   asp-route-id="@item.GroupId"
                                                   class="btn btn-primary btn-sm"
                                                   title="Sửa">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-action="Delete"
                                                   asp-route-id="@item.GroupId"
                                                   class="btn btn-danger btn-sm"
                                                   title="Xóa">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="3" class="text-center text-muted">
                                            Không có nhóm nào để hiển thị
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@{
    Group? deleteGroup = null;
    if (ViewData["DeleteGroup"] is Group g)
    {
        deleteGroup = g;
    }
}

@if (deleteGroup != null)
{
    <div class="modal fade" id="deleteGroupModal" tabindex="-1" aria-labelledby="deleteGroupModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="deleteGroupModalLabel">Xác nhận xóa nhóm</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Bạn có chắc chắn muốn xóa nhóm này không?</p>
                    <div class="form-group mb-2">
                        <label>Mã nhóm:</label>
                        <input type="text" class="form-control" value="@deleteGroup.GroupId" disabled />
                    </div>
                    <div class="form-group">
                        <label>Tên nhóm:</label>
                        <input type="text" class="form-control" value="@deleteGroup.GroupName" disabled />
                    </div>
                </div>
                <div class="modal-footer">
                    <a class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-arrow-left-circle"></i> Go back
                    </a>
                    <form asp-action="Delete" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@deleteGroup.GroupId" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <script>
            var modal = new bootstrap.Modal(document.getElementById('deleteGroupModal'));
            modal.show();
        </script>
    }
}
